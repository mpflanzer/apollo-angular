{
  "name": "apollo-angular-monorepo",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "website"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "ci-only:integration": "./scripts/integration tests",
    "deploy": "yarn workspaces run deploy",
    "format": "prettier --write \"packages/**/*.ts\"",
    "now-build": "(cd website && yarn && yarn build && mv build ../public)",
    "prebuild": "rimraf packages/*/build/",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "yarn workspaces run test",
    "test:e2e": "./scripts/run-e2e-locally.sh"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular-devkit/core": "^17.0.0",
    "@angular-devkit/schematics": "^17.0.0",
    "@angular/animations": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/platform-server": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@apollo/client": "^3.8.1",
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.10",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.26.2",
    "@schematics/angular": "^17.0.0",
    "@theguild/prettier-config": "^2.0.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^18.13.0",
    "babel-jest": "^29.6.4",
    "browserlist": "^1.0.1",
    "cpx2": "^2.0.0",
    "graphql": "^16.8.0",
    "husky": "^9.0.0",
    "jest": "^29.6.4",
    "jest-preset-angular": "^14.0.0",
    "jest-zone-patch": "^0.0.10",
    "lint-staged": "^14.0.1",
    "ng-packagr": "^17.0.0",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.1",
    "rxjs": "~7.8.0",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.1.1",
    "tslib": "^2.3.0",
    "typescript": "5.2.2",
    "zone.js": "~0.14.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/{src,tests}/**/*.ts": [
      "prettier --write"
    ]
  }
}
